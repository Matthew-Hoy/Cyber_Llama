
@{
    ViewBag.Title = "LiquidCooler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CyberLlamaConsumerSite.CRUDService.cLiquidCooler
@using CyberLlamaConsumerSite.CRUDService
@{ServiceClient sr = new ServiceClient();}
<h1 class="centerText" style="margin:10px 0px 10px 0px">Edit Liquid Cooler</h1>

@using (Html.BeginForm("ChangeLiquidCooler", "EditProduct", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">General</h4>
                <div class="form-Input " style="display:none">
                    <label>id:</label>
                    @Html.TextBoxFor(m => m.id);
                </div>
                <div class="form-Input " style="margin-top:30px;">
                    <label>Model:</label>
                    @Html.TextBoxFor(m => m.model)
                </div>
                <div class="form-Input ">
                    <label>Brand:</label>
                    @Html.TextBoxFor(m => m.brand)
                </div>
                <div class="form-Input ">
                    <label>Series:</label>
                    @Html.TextBoxFor(m => m.series)
                </div>
                <div class="form-Input ">
                    <label>Sockets supported:</label>
                    @{var sockets = sr.getAllCPU().Select(x => x.Chipset);}
                    @Html.DropDownList("chipsetDropdown", new SelectList(sockets.Select(x => x).Distinct()), new { @onchange = "addChip()", @id = "chipsetDropdown" })
                    @Html.TextBoxFor(m => m.sockets, new { id = "chipsetText" })
                    <script>
                        function addChip() {
                            console.log("Running");
                            var x = document.getElementById("chipsetText");

                            var e = document.getElementById("chipsetDropdown");
                            var listValue = e.options[e.selectedIndex].text;
                            if (x.value == "") {
                                x.value = listValue;
                            } else {
                                x.value += ", " + listValue;
                            }
                        }
                    </script>

                </div>
                <div class="form-Input ">
                    <label>warranty:</label>
                    @Html.TextBoxFor(m => m.warranty)
                </div>

                <div class="form-Input ">
                    <label>Active:</label>
                    @Html.TextBoxFor(m => m.active)
                </div>
                <div class="form-Input ">
                    <label>Price:</label>
                    @Html.TextBoxFor(m => m.price)
                </div>
                <div class="form-Input ">
                    <label>Quantity:</label>
                    <input name="quantity" id="quantity" />
                </div>
                <div class="form-Input ">
                    <label>Image Link:</label>
                    <input name="image" id="image" />
                </div>
            </div>
        </div>
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">Additional</h4>
                <div class="form-Input " style="margin-top:30px;">
                    <label>Radiator Mats:</label>
                    @Html.TextBoxFor(m => m.rad_mats)
                </div>

                <div class="form-Input ">
                    <label>Fan Size:</label>
                    @Html.TextBoxFor(m => m.fan_size)
                </div>
                <div class="form-Input ">
                    <label>Radiator length:</label>
                    @Html.TextBoxFor(m => m.rad_length)
                </div>
                <div class="form-Input ">
                    <label>Radiator Width:</label>
                    @Html.TextBoxFor(m => m.rad_width)
                </div>
                <div class="form-Input ">
                    <label>Radiator Height:</label>
                    @Html.TextBoxFor(m => m.rad_height)
                </div>
                <div class="form-Input ">
                    <label>Tube lenth:</label>
                    @Html.TextBoxFor(m => m.tube_length)
                </div>
                <div class="form-Input ">
                    <label>Tube Mats:</label>
                    @Html.TextBoxFor(m => m.tube_mats)
                </div>
                <div class="form-Input ">
                    <label>Colour:</label>
                    @Html.TextBoxFor(m => m.color)
                </div>

                <div class="form-Input ">
                    <label>RGB:</label>
                    @Html.TextBoxFor(m => m.rgb)
                </div>
            </div>
        </div>
    </div>

    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input">
        <input class="AddEditButton centerImage" type="submit" value="Edit Liquid Cooler" />
    </div>
}

