
@{
    ViewBag.Title = "SSD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CyberLlamaConsumerSite.CRUDService.cSSD

<img class="centerImage" Style="margin-top:4%;max-width: 100px;margin-top:20px" src="~/Images/llama.png" />
<h1 class="centerText" style="margin:10px 0px 40px 0px">Edit SSD</h1>
<hr color="white" />

@using (Html.BeginForm("ChangeSSD", "EditProduct", FormMethod.Post))
{
    <div class="form-Input centerImage" style="display:none">
        <label>id:</label>
        @Html.TextBoxFor(m => m.id);
    </div>
    <div class="form-Input centerImage">
        <label>Model:</label>
        @Html.TextBoxFor(m => m.model)
    </div>
    <div class="form-Input centerImage">
        <label>Brand:</label>
        @Html.TextBoxFor(m => m.brand)
    </div>
    <div class="form-Input centerImage">
        <label>Series:</label>
        @Html.TextBoxFor(m => m.series)
    </div>
    <div class="form-Input centerImage">
        <label>form factor:</label>
        @Html.TextBoxFor(m => m.form_factor)
    </div>

    <div class="form-Input centerImage">
        <label>Capacity:</label>
        @Html.TextBoxFor(m => m.capacity)
    </div>
    <div class="form-Input centerImage">
        <label>interface type:</label>
        @Html.TextBoxFor(m => m.interface_type)
    </div>
    <div class="form-Input centerImage">
        <label>length:</label>
        @Html.TextBoxFor(m => m.length)
    </div>
    <div class="form-Input centerImage">
        <label>width:</label>
        @Html.TextBoxFor(m => m.width)
    </div>
    <div class="form-Input centerImage">
        <label>max sequential read :</label>
        @Html.TextBoxFor(m => m.max_seq_read)
    </div>
    <div class="form-Input centerImage">
        <label>max sequential write:</label>
        @Html.TextBoxFor(m => m.max_seq_write)
    </div>
    <div class="form-Input centerImage">
        <label> random read:</label>
        @Html.TextBoxFor(m => m.random_read)
    </div>
    <div class="form-Input centerImage">
        <label>random write:</label>
        @Html.TextBoxFor(m => m.random_write)
    </div>
    <div class="form-Input centerImage">
        <label>MTBF:</label>
        @Html.TextBoxFor(m => m.mtbf)
    </div>
    <div class="form-Input centerImage">
        <label>operating temperature:</label>
        @Html.TextBoxFor(m => m.operating_temp)
    </div>
    <div class="form-Input centerImage">
        <label>max power usage:</label>
        @Html.TextBoxFor(m => m.max_power_usage)
    </div>
    <div class="form-Input centerImage">
        <label>warranty:</label>
        @Html.TextBoxFor(m => m.warranty)
    </div>

    <div class="form-Input centerImage">
        <label>Active:</label>
        @Html.TextBoxFor(m => m.active)
    </div>
    <div class="form-Input centerImage">
        <label>Price:</label>
        @Html.TextBoxFor(m => m.price)
    </div>
    <div class="form-Input centerImage">
        <label>Quantity:</label>
        <input name="quantity" id="quantity" />
    </div>
    <div class="form-Input centerImage">
        <label>Image Link:</label>
        <input name="image" id="image" />
    </div>
    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input centerImage login">
        <input type="submit" value="Edit SSD" />
    </div>
}

