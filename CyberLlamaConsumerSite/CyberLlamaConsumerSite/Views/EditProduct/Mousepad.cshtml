
@{
    ViewBag.Title = "MousePad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CyberLlamaConsumerSite.CRUDService.cMousePad
<h1 class="centerText" style="margin:10px 0px 10px 0px">Edit MousePad</h1>

@using (Html.BeginForm("ChangeMousepad", "EditProduct", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">General</h4>
                <div class="form-Input " style="display:none">
                    <label>id:</label>
                    @Html.TextBoxFor(m => m.id);
                </div>
                <div class="form-Input " style="margin-top:30px;">
                    <label>Model:</label>
                    @Html.TextBoxFor(m => m.model)
                </div>
                <div class="form-Input ">
                    <label>Brand:</label>
                    @Html.TextBoxFor(m => m.brand)
                </div>
                <div class="form-Input ">
                    <label>Series:</label>
                    @Html.TextBoxFor(m => m.series)
                </div>
                <div class="form-Input ">
                    <label>warranty:</label>
                    @Html.TextBoxFor(m => m.warranty)
                </div>

                <div class="form-Input ">
                    <label>Active:</label>
                    @Html.TextBoxFor(m => m.active)
                </div>
                <div class="form-Input ">
                    <label>Price:</label>
                    @Html.TextBoxFor(m => m.price)
                </div>
                <div class="form-Input ">
                    <label>Quantity:</label>
                    <input name="quantity" id="quantity" />
                </div>
                <div class="form-Input ">
                    <label>Image Link:</label>
                    <input name="image" id="image" />
                </div>
            </div>
        </div>
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">Additional</h4>
                <div class="form-Input " style="margin-top:30px;">
                    <label>Color:</label>
                    @Html.TextBoxFor(m => m.colour)
                </div>

                <div class="form-Input ">
                    <label>Materials:</label>
                    @Html.TextBoxFor(m => m.materials)
                </div>
                <div class="form-Input ">
                    <label>Base:</label>
                    @Html.TextBoxFor(m => m.pad_base)
                </div>
                <div class="form-Input ">
                    <label>Dimensions:</label>
                    @Html.TextBoxFor(m => m.dimensions)
                </div>
            </div>
        </div>
    </div>
    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input ">
        <input class="AddEditButton centerImage" type="submit" value="Edit MousePad" />
    </div>
}

