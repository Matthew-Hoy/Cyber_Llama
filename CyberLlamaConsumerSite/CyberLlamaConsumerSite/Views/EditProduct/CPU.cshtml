
@{
    ViewBag.Title = "CPU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CyberLlamaConsumerSite.CRUDService.cCPU

<img class="centerImage" Style="margin-top:4%;max-width: 100px;margin-top:20px" src="~/Images/llama.png" />
<h1 class="centerText" style="margin:10px 0px 40px 0px">Add Computer Processing Unit</h1>
<hr color="white" />

@using (Html.BeginForm("addCPU", "AddNewProduct", FormMethod.Post))
{
    <div class="form-Input centerImage">
        <label>Model:</label>
        @Html.TextBoxFor(m => m.model)
    </div>
    <div class="form-Input centerImage">
        <label>Brand:</label>
        @Html.TextBoxFor(m => m.brand)
    </div>
    <div class="form-Input centerImage">
        <label>Series:</label>
        @Html.TextBoxFor(m => m.series)
    </div>
    <div class="form-Input centerImage">
        <label>Cores:</label>
        @Html.TextBoxFor(m => m.cores)
    </div>

    <div class="form-Input centerImage">
        <label>Threads:</label>
        @Html.TextBoxFor(m => m.threads)
    </div>
    <div class="form-Input centerImage">
        <label>Base Clock:</label>
        @Html.TextBoxFor(m => m.base_clock)
    </div>
    <div class="form-Input centerImage">
        <label>boost clock:</label>
        @Html.TextBoxFor(m => m.boost_clock)
    </div>
    <div class="form-Input centerImage">
        <label>Total cache:</label>
        @Html.TextBoxFor(m => m.total_cache)
    </div>
    <div class="form-Input centerImage">
        <label>chipset:</label>
        @Html.TextBoxFor(m => m.Chipset)
    </div>
    <div class="form-Input centerImage">
        <label>TDP:</label>
        @Html.TextBoxFor(m => m.tdp)
    </div>
    <div class="form-Input centerImage">
        <label>Max Temparature:</label>
        @Html.TextBoxFor(m => m.max_temp)
    </div>
    <div class="form-Input centerImage">
        <label>system Memory speed:</label>
        @Html.TextBoxFor(m => m.max_mem_speed)
    </div>

    <div class="form-Input centerImage">
        <label>system memory type:</label>
        @Html.TextBoxFor(m => m.mem_type)
    </div>
    <div class="form-Input centerImage">
        <label>Memory channels:</label>
        @Html.TextBoxFor(m => m.mem_channels)
    </div>
    <div class="form-Input centerImage">
        <label>warranty:</label>
        @Html.TextBoxFor(m => m.warranty)
    </div>

    <div class="form-Input centerImage">
        <label>Active:</label>
        @Html.TextBoxFor(m => m.active)
    </div>
    <div class="form-Input centerImage">
        <label>Price:</label>
        @Html.TextBoxFor(m => m.price)
    </div>
    <div class="form-Input centerImage">
        <label>Image Link:</label>
        <input name="image" id="image" />
    </div>
    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input centerImage login">
        <input type="submit" value="addGpu" />
    </div>
}

