
@{
    ViewBag.Title = "EditEmployee";
}

@model CyberLlamaConsumerSite.CRUDService.cEmployee

<img class="centerImage" style="max-width:100px;margin-top:10px;" src="~/Images/llama.png" />

<h1 class="centerText" style="margin:10px 0px 10px 0px">Edit Employee Details</h1>

@using (Html.BeginForm("ChangeEmployee", "Management", FormMethod.Post, new { style = "margin-left:auto;margin-right:auto;width:600px;" }))
{
    <div class="borderedAddEditElement ">
        <h4 class="centerText addEditFormTitle">User Details</h4>
        <div class="form-Input " style="display:none">
            <label>id:</label>
            @Html.TextBoxFor(m => m.Admin_ID, new { required = "required" });
        </div>
        <div class="form-Input " style="margin-top:30px;">
            <label>First Name:</label>
            @Html.TextBoxFor(m => m.First_Name, new { required = "required" })
        </div>
        <div class="form-Input ">
            <label>Surname:</label>
            @Html.TextBoxFor(m => m.Surname, new { required = "required" })
        </div>
        <div class="form-Input ">
            <label>E-Mail:</label>
            @Html.TextBoxFor(m => m.Email, new { required = "required" })
        </div>
        <div class="form-Input ">
            <label>Address:</label>
            @Html.TextBoxFor(m => m.Position, new { required = "required" })
        </div>

        <div class="form-Input ">
            <label>City:</label>
            @Html.TextBoxFor(m => m.Contact_Number, new { required = "required" })
        </div>
    </div>


    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input">
        <input class="AddEditButton centerImage" type="submit" value="Edit Employee Details" />
    </div>
}