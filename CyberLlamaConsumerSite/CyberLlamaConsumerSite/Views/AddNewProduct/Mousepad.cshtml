
@{
    ViewBag.Title = "MousePad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CyberLlamaConsumerSite.CRUDService.cMousePad
<img class="centerImage" Style="margin-top:4%;max-width: 100px;margin-top:20px" src="~/Images/llama.png" />
<h1 class="centerText" style="margin:10px 0px 40px 0px">Add MousePad</h1>
<hr color="white" />

@using (Html.BeginForm("addMousepad", "AddNewProduct", FormMethod.Post))
{
    <div class="form-Input centerImage">
        <label>Model:</label>
        @Html.TextBoxFor(m => m.model)
    </div>
    <div class="form-Input centerImage">
        <label>Brand:</label>
        @Html.TextBoxFor(m => m.brand)
    </div>
    <div class="form-Input centerImage">
        <label>Series:</label>
        @Html.TextBoxFor(m => m.series)
    </div>
    <div class="form-Input centerImage">
        <label>Color:</label>
        @Html.TextBoxFor(m => m.colour)
    </div>

    <div class="form-Input centerImage">
        <label>Materials:</label>
        @Html.TextBoxFor(m => m.materials)
    </div>
    <div class="form-Input centerImage">
        <label>Base:</label>
        @Html.TextBoxFor(m => m.pad_base)
    </div>
    <div class="form-Input centerImage">
        <label>Dimensions:</label>
        @Html.TextBoxFor(m => m.dimensions)
    </div>
    <div class="form-Input centerImage">
        <label>warranty:</label>
        @Html.TextBoxFor(m => m.warranty)
    </div>

    <div class="form-Input centerImage">
        <label>Active:</label>
        @Html.TextBoxFor(m => m.active)
    </div>
    <div class="form-Input centerImage">
        <label>Price:</label>
        @Html.TextBoxFor(m => m.price)
    </div>
    <div class="form-Input centerImage">
        <label>Image Link:</label>
        <input name="image" id="image" />
    </div>
    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input centerImage login">
        <input type="submit" value="Add MousePad" />
    </div>
}

