
@{
    ViewBag.Title = "RAM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CyberLlamaConsumerSite.CRUDService.cRAM
@using CyberLlamaConsumerSite.CRUDService
@{ServiceClient sr = new ServiceClient();}
<h1 class="centerText" style="margin:10px 0px 10px 0px">Add RAM</h1>

@using (Html.BeginForm("addRAM", "AddNewProduct", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">Important</h4>
                <div class="form-Input " style="margin-top:30px">
                    <label>Model:</label>
                    @Html.TextBoxFor(m => m.model)
                </div>
                <div class="form-Input ">
                    <label>Brand:</label>
                    @Html.TextBoxFor(m => m.brand)
                </div>
                <div class="form-Input ">
                    <label>Series:</label>
                    @Html.TextBoxFor(m => m.series)
                </div>
                <div class="form-Input ">
                    <label>capacity:</label>
                    @Html.TextBoxFor(m => m.capacity)
                </div>

                <div class="form-Input ">
                    <label>Type:</label>
                    @Html.TextBoxFor(m => m.type)
                </div>
                <div class="form-Input ">
                    <label>speed:</label>
                    @Html.TextBoxFor(m => m.speed)
                </div>
                <div class="form-Input ">
                    <label>warranty:</label>
                    @Html.TextBoxFor(m => m.warranty)
                </div>

                <div class="form-Input ">
                    <label>Active:</label>
                    @Html.TextBoxFor(m => m.active)
                </div>
                <div class="form-Input ">
                    <label>Price:</label>
                    @Html.TextBoxFor(m => m.price)
                </div>
                <div class="form-Input ">
                    <label>Image Link:</label>
                    <input name="image" id="image" />
                </div>
            </div>
        </div>
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">Additional</h4>
                <div class="form-Input " style="margin-top:30px">
                    <label>latency:</label>
                    @Html.TextBoxFor(m => m.latency)
                </div>
                <div class="form-Input ">
                    <label>voltage:</label>
                    @Html.TextBoxFor(m => m.voltage)
                </div>
                <div class="form-Input ">
                    <label>channel config:</label>
                    @Html.TextBoxFor(m => m.channel_config)
                </div>
                <div class="form-Input ">
                    <label>height:</label>
                    @Html.TextBoxFor(m => m.height)
                </div>
            </div>
        </div>
    </div>

   
   
   
    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input ">
        <input class="AddEditButton centerImage" type="submit" value="Add RAM" />
    </div>
}

