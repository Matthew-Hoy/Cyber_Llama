
@{
    ViewBag.Title = "HDD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CyberLlamaConsumerSite.CRUDService.cHDD

<img class="centerImage" Style="margin-top:4%;max-width: 100px;margin-top:20px" src="~/Images/llama.png" />
<h1 class="centerText" style="margin:10px 0px 40px 0px">Add a Hard drive</h1>
<hr color="white" />

@using (Html.BeginForm("addHDD", "AddNewProduct", FormMethod.Post))
{
    <div class="form-Input centerImage">
        <label>Model:</label>
        @Html.TextBoxFor(m => m.model)
    </div>
    <div class="form-Input centerImage">
        <label>Brand:</label>
        @Html.TextBoxFor(m => m.brand)
    </div>
    <div class="form-Input centerImage">
        <label>Series:</label>
        @Html.TextBoxFor(m => m.series)
    </div>
    <div class="form-Input centerImage">
        <label>Size:</label>
        @Html.TextBoxFor(m => m.size)
    </div>

    <div class="form-Input centerImage">
        <label>Storage:</label>
        @Html.TextBoxFor(m => m.storage)
    </div>
    <div class="form-Input centerImage">
        <label>Interface type:</label>
        @Html.TextBoxFor(m => m.interface_type)
    </div>
    <div class="form-Input centerImage">
        <label>Max sustained Transfer rate:</label>
        @Html.TextBoxFor(m => m.max_sustained_transfer_rate)
    </div>
    <div class="form-Input centerImage">
        <label>Rotational speed:</label>
        @Html.TextBoxFor(m => m.rotational_speed)
    </div>
    <div class="form-Input centerImage">
        <label>Louad Unload Cycles:</label>
        @Html.TextBoxFor(m => m.load_unload_cycles)
    </div>
    <div class="form-Input centerImage">
        <label>Workload rate limit:</label>
        @Html.TextBoxFor(m => m.Workload_Rate_Limit)
    </div>
    <div class="form-Input centerImage">
        <label>Power Usage:</label>
        @Html.TextBoxFor(m => m.avg_power_usage)
    </div>
    <div class="form-Input centerImage">
        <label>Operating Temparature:</label>
        @Html.TextBoxFor(m => m.operation_temp)
    </div>
    <div class="form-Input centerImage">
        <label>Weight:</label>
        @Html.TextBoxFor(m => m.weight)
    </div>
    <div class="form-Input centerImage">
        <label>warranty:</label>
        @Html.TextBoxFor(m => m.warranty)
    </div>

    <div class="form-Input centerImage">
        <label>Active:</label>
        @Html.TextBoxFor(m => m.active)
    </div>
    <div class="form-Input centerImage">
        <label>Price:</label>
        @Html.TextBoxFor(m => m.price)
    </div>
    <div class="form-Input centerImage">
        <label>Image Link:</label>
        <input name="image" id="image" />
    </div>
    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input centerImage login">
        <input type="submit" value="addGpu" />
    </div>
}

