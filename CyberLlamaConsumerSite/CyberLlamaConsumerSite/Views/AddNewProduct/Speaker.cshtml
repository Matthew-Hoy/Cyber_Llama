
@{
    ViewBag.Title = "Speaker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CyberLlamaConsumerSite.CRUDService.cSpeaker


<h1 class="centerText" style="margin:10px 0px 10px 0px">Add Speaker</h1>

@using (Html.BeginForm("addSpeaker", "AddNewProduct", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle" >Important</h4>
                <div class="form-Input " style="margin-top:30px">
                    <label>Model:</label>
                    @Html.TextBoxFor(m => m.model)
                </div>
                <div class="form-Input ">
                    <label>Brand:</label>
                    @Html.TextBoxFor(m => m.brand)
                </div>
                <div class="form-Input ">
                    <label>Series:</label>
                    @Html.TextBoxFor(m => m.series)
                </div>
                <div class="form-Input ">
                    <label>warranty:</label>
                    @Html.TextBoxFor(m => m.warranty)
                </div>

                <div class="form-Input ">
                    <label>Active:</label>
                    @Html.TextBoxFor(m => m.active)
                </div>
                <div class="form-Input ">
                    <label>Price:</label>
                    @Html.TextBoxFor(m => m.price)
                </div>
                <div class="form-Input ">
                    <label>Image Link:</label>
                    <input name="image" id="image" />
                </div>
            </div>
        </div>
        <div class="col-md-6 smallMargin-top">
            <div class="borderedAddEditElement ">
                <h4 class="centerText addEditFormTitle">Additional</h4>
                <div class="form-Input " style="margin-top:30px">
                    <label>Satelite dimensions:</label>
                    @Html.TextBoxFor(m => m.satellite_dimensions)
                </div>

                <div class="form-Input ">
                    <label>Satelite weight:</label>
                    @Html.TextBoxFor(m => m.satellite_weight)
                </div>
                <div class="form-Input ">
                    <label>Subwoofer dimensions:</label>
                    @Html.TextBoxFor(m => m.subwoofer_dimensions)
                </div>
                <div class="form-Input ">
                    <label>Subwoofer weight:</label>
                    @Html.TextBoxFor(m => m.subwoofer_weight)
                </div>
                <div class="form-Input centerImage">
                    <label>Controls:</label>
                    @Html.TextBoxFor(m => m.controls)
                </div>
                <div class="form-Input ">
                    <label>System Requirements:</label>
                    @Html.TextBoxFor(m => m.system_requirements)
                </div>
                <div class="form-Input ">
                    <label>Features:</label>
                    @Html.TextBoxFor(m => m.features)
                </div>
            </div>
        </div>
    </div>

    <p color="red" style="text-align:center">@ViewBag.status</p>
    <div class="form-Input ">
        <input class="AddEditButton centerImage" type="submit" value="Add Speaker" />
    </div>
}

